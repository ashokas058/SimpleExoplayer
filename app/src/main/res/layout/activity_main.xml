<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tag_main_playerview"
        app:resize_mode="fit"
        app:hide_on_touch="true"
        app:show_timeout="5000"
        app:rewind_increment="10000"
        app:fastforward_increment="10000"
        app:use_controller="true"
        android:background="@color/black"
        app:player_layout_id="@layout/exo_styled_player_view"
        app:controller_layout_id="@layout/tag_main_exo_custom_cntlr"></com.google.android.exoplayer2.ui.PlayerView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/tag_main_progressbar"
        android:layout_centerInParent="true"></ProgressBar>


</RelativeLayout>